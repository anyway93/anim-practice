---
interface Props {
  class?: string
  id: string // layerKey
  parent: string // обязателен, если '' — не добавлять data-menu-parent
  [key: string]: any
}

const { class: className, id, parent, ...rest } = Astro.props as Props

export { MenuLayer }
---

<div
  class:list={['menu-layer', className]}
  data-menu-layer={id}
  data-scrollbar
  data-lenis-prevent
  {...parent !== '' ? { 'data-menu-parent': parent } : {}}
  {...rest}
>
  <slot />
</div>

<style lang="scss">
  .menu-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    background: #fff;
  }
</style>
